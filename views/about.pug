extends base

block content 
  main.main
    section.section-header
      .header__hero
        .header__hero-overlay &nbsp;
        img.header__hero-img(src='/img/tours/tour-1-cover.jpg', alt='Natours Hero')
      .heading-box
        h1.heading-primary
          span About Natours
        .heading-box__group
          .heading-box__detail
            svg.heading-box__icon
              use(xlink:href='/img/icons.svg#icon-clock')
            span.heading-box__text 15+ Years of Experience
          .heading-box__detail
            svg.heading-box__icon
              use(xlink:href='/img/icons.svg#icon-map-pin')
            span.heading-box__text Worldwide Tours

    section.section-cta
      .cta
        .cta__img.cta__img--logo
          img(src='/img/logo-white.png', alt='Natours logo')
        .cta__content
          h2.heading-secondary Ready for your next adventure?
          p.cta__text
            | Join thousands of adventurers who have discovered the magic of nature 
            | with Natours. Start planning your unforgettable journey today!
          a.btn.btn--green.span-all-rows(href='/') Start Your Adventure!
    
